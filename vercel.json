{
    "version": 2,
    "builds": [
        {
            "src": "backend/app.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/**/*",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "backend/app.js"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/$1"
        },
        {
            "src": "/(.*)",
            "dest": "frontend/pages/weather-forecast.html"
        }
        ,
        {
            "src": "/(.*)",
            "dest": "frontend/pages/weather-10days.html"
        }
        ,
        {
            "src": "/(.*)",
            "dest": "frontend/pages/weather-data-entry.html"
        }
    ]
}
